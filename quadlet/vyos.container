[Unit]
Description=VyOS Rotuer/Firewall 

[Container]
ContainerName=vyos
Image=localhost/vyos:latest
HostName=bfnetgw
SecurityLabelDisable=true
PodmanArgs=--privileged
Network=wan:interface-name=eth0
Network=lan:interface-name=eth1
Network=dmz:interface-name=eth2
Volume=/lib/modules:/lib/modules
Volume=vyos.config:/opt/vyatta/etc/config:z
Exec=/sbin/init

[Service]
Restart=on-failure

[Install]
WantedBy=default.target